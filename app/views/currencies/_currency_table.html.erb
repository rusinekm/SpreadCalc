<table>
  <thead>
    <tr>
      <th>site name</th>
      <th>buy value</th>
      <th>sell value</th>
    </tr>
  </thead>
  <% id_of_currency = currency.id %>
  <tbody>
    <% currency.sites.each do |site| %>
      <tr>
        <td><%= link_to site.name, site.url %></td>
        <td><%= site.buy_value(id_of_currency) %></td>
        <td><%= site.sell_value(id_of_currency) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p class="small-12 columns, updated_text">last updated at: 
<% if StatNode.last then %>
  <%=StatNode.last.created_at %>
<% else %> 
  no data yet.
<% end %>
</p>